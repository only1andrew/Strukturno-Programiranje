#include <iostream>
using namespace std;
int main()
{
    int MAX = 100;
    int a[MAX], n;
    cin>>n;
    for(int i = 0; i < n; i++)
    {
        cin>>a[i];
    }
    
    for(int i = 0; i < n; i++)
    {
        if(a[i] % 2 == 0)
        {
            a[i]++;
        }
        else if(a[i] % 2 != 0)
        {
            a[i]--;
        }
    }
    
    for(int i = 0; i < n; i++)
    {
        cout<<a[i]<<" ";
    }
    cout<<endl;
    return 0;
}
